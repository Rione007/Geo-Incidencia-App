<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F4F5F7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp">

        <!-- Explorar -->
        <LinearLayout
            android:id="@+id/btnExplorar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/iconExplorar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_explorar"
                app:tint="@color/color_inactive_text" />
            <TextView
                android:id="@+id/textExplorar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explorar"
                android:textColor="@color/color_inactive_text"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Incidentes -->
        <LinearLayout
            android:id="@+id/btnIncidentes"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/iconIncidentes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_incidente"
                app:tint="@color/color_inactive_text" />
            <TextView
                android:id="@+id/textIncidentes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incidentes"
                android:textColor="@color/color_inactive_text"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Mis Reportes -->
        <LinearLayout
            android:id="@+id/btnMisReportes"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/iconMisReportes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_reportes"
                app:tint="@color/color_inactive_text" />
            <TextView
                android:id="@+id/textMisReportes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis Reportes"
                android:textColor="@color/color_inactive_text"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout
            android:id="@+id/btnPerfil"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/iconPerfil"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_perfil"
                app:tint="@color/color_inactive_text" />
            <TextView
                android:id="@+id/textPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textColor="@color/color_inactive_text"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
